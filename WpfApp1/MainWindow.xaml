<Window x:Class="WpfApp1.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:WpfApp1"
        mc:Ignorable="d"
        Title="MainWindow" WindowState="Maximized" Height="453" Width="712" >
    <Window.DataContext>
        <local:DataContextMainWindow/>
    </Window.DataContext>
    <Grid Background="CadetBlue">
        <DockPanel>
            <Menu DockPanel.Dock="Top" Height="20" VerticalAlignment="Top">
                <MenuItem Header="Menu">
                    <MenuItem Name="MenuItem_StatisticsCompetitionWindow" Header="Statistics Competition" Click="MenuItem_StatisticsCompetitionWindow_OnClick"/>
                    <MenuItem Name="MenuItem_StatisticsCurrentRaceWindow" Header="Statistics Race" Click="MenuItem_StatisticsCurrentRaceWindow_OnClick"/>
                    <MenuItem Name="MenuItem_Exit" Header="Close" Click="MenuItem_Exit_OnClick"/>
                </MenuItem>
            </Menu>
            <Label DockPanel.Dock="Top" x:Name="TrackNameLabel" Content="{Binding TrackName, Mode=OneWay}"/>
            <Image DockPanel.Dock="Bottom" x:Name="ImageName"></Image>
        </DockPanel>
    </Grid>
</Window>
